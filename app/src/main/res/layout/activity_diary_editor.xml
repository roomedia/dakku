<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="com.roomedia.dakku.ui.editor.StickerViewModel" />
        <variable name="commonMenuHandlers" type="com.roomedia.dakku.ui.editor.menu.CommonMenuHandlers" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.editor.DiaryEditorActivity">

        <FrameLayout
            android:id="@+id/diaryFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/horizontalSeekBar"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:max="100"
            app:layout_constraintBottom_toTopOf="@+id/menuLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <SeekBar
            android:id="@+id/verticalSeekBar"
            android:layout_width="400dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:max="100"
            android:rotation="-90"
            android:translationX="-200dp"
            app:layout_constraintBottom_toTopOf="@+id/menuLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/diaryFrame" />

        <LinearLayout
            android:id="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{commonMenuHandlers.visibility}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <include
                android:id="@+id/colorMenu"
                layout="@layout/menu_color" />

            <include
                android:id="@+id/textMenu"
                layout="@layout/menu_text"
                android:selectVisibility="@{commonMenuHandlers.menuHandlersVisibility}" />

            <include
                android:id="@+id/addMenu"
                layout="@layout/menu_add"
                android:selectVisibility="@{commonMenuHandlers.menuHandlersVisibility}" />

            <include
                android:id="@+id/commonMenu"
                layout="@layout/menu_common" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>