<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransparentImageButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/transparent_background</item>
    </style>

    <style name="TransparentMenu" parent="TransparentImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StickerTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine|text</item>
        <item name="android:padding">32dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>